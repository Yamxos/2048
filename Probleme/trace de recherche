top=Tk()

value = DoubleVar()
scale = Scale(top, variable=value,from_=4 ,to=8)
scale.pack()
label = Label(top, text="Taille de la grille")
label.pack()


bouton=Button(top, text="Jouer", command=top.destroy)
bouton.pack()
top.mainloop()
grille=int(value.get())

